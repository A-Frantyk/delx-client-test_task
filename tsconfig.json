{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "paths": {
      "*": ["./src/*"]
    }
  },
  "include": ["src/**/*", "vite.config.ts"]
}
